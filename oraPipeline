pipeline {
    agent { label 'agent-x1' }
     @Library('JenkinsLibCICD') _
     stages {
            stage ('Find hostname') {
            steps { 
                echo 'get hostname of the agent'
                sh script: "hostname"
               }
            }
	   stage ('List intances') {
            steps { 
                echo 'List instances running'
                sh script: "ps -ef | grep smon"
             }
           }
           stage ('Library Demo') {
            steps {
                echo 'Hello world'
                sayHello 'Alex'
               }
           }
      }
    }
